package hust.soict.hedspi.test.media;

import hust.soict.hedspi.aims.media.DigitalVideoDisc;

import javax.swing.JOptionPane;

public class TestMediaCompareTo {
	
	@SuppressWarnings({ "rawtypes", "unchecked" })
	public static void main(String args[]) {
		DigitalVideoDisc dvd1 = new DigitalVideoDisc("Fox","Eladin","Animation",16.2f);
		DigitalVideoDisc dvd2 = new DigitalVideoDisc("WB","AMatrix","Fiction",22.1f);
		DigitalVideoDisc dvd3 = new DigitalVideoDisc("Disney","Troll","Drama",10.5f);
		// TODO Auto-generated constructor stub
		java.util.Collection collection = new java.util.ArrayList();
		collection.add(dvd1);
		collection.add(dvd2);
		collection.add(dvd3);
		
		java.util.Iterator iterator = collection.iterator();
		JOptionPane.showMessageDialog(null, "The DVD current");
		while(iterator.hasNext()) {
			JOptionPane.showMessageDialog(null, ((DigitalVideoDisc)iterator.next()).getTitle());
		}
		java.util.Collections.sort((java.util.List)collection);
		
		iterator = collection.iterator();
		JOptionPane.showMessageDialog(null, "The DVD sorted");
		while(iterator.hasNext()) {
			JOptionPane.showMessageDialog(null, ((DigitalVideoDisc)iterator.next()).getTitle());
		}
	}

}
